<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ConfirmOrderActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="adsasdfasadsffa"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="套餐类型"
        android:textSize="14sp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/orange_gray_bg_select"
        android:gravity="center"
        android:text="一日游"
        android:textIsSelectable="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="出游人群"
        android:textSize="14sp" />

    <LinearLayout
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_is_adult"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="成人"
            android:textColor="@color/orange_black_color_select" />

        <TextView
            android:id="@+id/tv_is_child"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="儿童"
            android:textColor="@color/orange_black_color_select" />


    </LinearLayout>

   <View
       android:background="@color/color_f7f7f7"
       android:layout_width="match_parent"
       android:layout_height="10dp"/>

    <TextView
        android:text="出发日期"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>