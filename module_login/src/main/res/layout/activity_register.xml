<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.RegisterActivity">


    <TextView
        android:text="请输入手机号"
        android:textColor="@color/color_333"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <com.juziwl.uilibrary.edittext.EditTextWithDel
            android:id="@+id/etd_tel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint=""
            android:maxLength="20"
            android:text="wxq"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="15sp" />


        <com.juziwl.uilibrary.textview.CodeTextView
            android:id="@+id/tv_qcode"
            android:layout_width="100dp"
            android:padding="5dp"
            app:tb_psText="重新获取"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />




        <!--<TextView-->
            <!--android:visibility="visible"-->
            <!--android:id="@+id/tv_qcode"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:padding="5dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/common_corner_gray"-->
            <!--android:text="获取验证码"-->
            <!--android:textColor="#666666"-->
            <!--android:textSize="12sp" />-->
    </LinearLayout>

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:text="验证码"
        android:textColor="@color/color_333"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.juziwl.uilibrary.edittext.EditTextWithDel
        android:id="@+id/etd_code"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入验证码"
        android:maxLength="6"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="15sp" />



    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginTop="14dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:text="密码"
        android:textColor="@color/color_333"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.juziwl.uilibrary.edittext.EditTextWithDel
        android:layout_marginTop="25dp"
        android:id="@+id/etd_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="password"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="请输入密码"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="15sp" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:padding="0dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_100dp_solid_0093e8"
        android:text="注册" />

</LinearLayout>