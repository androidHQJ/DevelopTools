<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RectImageView">
        <attr name="borderRadius" />
        <attr name="type" />
        <!--下面是跟带边有关的属性-->
        <attr name="needBorder" format="boolean" />
        <attr name="borderWith" format="dimension" />
        <attr name="borderColor" format="color" />
        <!--针对各个角的半径-->
        <attr name="diffBorder" format="boolean" />
        <attr name="round_corner_top_left" format="integer|dimension" />
        <attr name="round_corner_top_right" format="integer|dimension" />
        <attr name="round_corner_bottom_left" format="integer|dimension" />
        <attr name="round_corner_bottom_right" format="integer|dimension" />
    </declare-styleable>

    <declare-styleable name="ForceClickImageView">
        <attr name="foregroundColor" format="reference|color"/>
    </declare-styleable>
</resources>