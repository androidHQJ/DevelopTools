<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BaiduChooseAddressActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/baidu_mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imv_center_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_choose_location" />

            <Space
                android:layout_width="2dp"
                android:layout_height="5dp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_choose_location" />

        </LinearLayout>

    </RelativeLayout>



    <com.juziwl.uilibrary.recycler.PullRefreshRecycleView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>